set shiftwidth=4
set softtabstop=4
set tabstop=4
set noexpandtab

noremap <Up>    <NOP>
noremap <Down>  <NOP>
noremap <Left>  <NOP>
noremap <Right> <NOP>

noremap h <NOP>
noremap j <NOP>
noremap k <NOP>
noremap l <NOP>

let mapleader = ","

set incsearch
set hlsearch
set ignorecase
set smartcase

nmap <leader>, :nohl<CR>
